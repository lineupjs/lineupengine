{
  "hooks": {
    "before:init": "yarn run lint && yarn test",
    "before:release": "yarn compile && yarn run build && yarn run dist && yarn run postdist",
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  },
  "git": {
    "tagName": "v${version}"
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true,
    "assets": ["dist/*.zip"]
  }
}
