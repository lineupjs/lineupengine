{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "importHelpers": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2016.array.include",
      "es2017.object"
    ],
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "demo/**/*.ts",
    "demo/**/*.tsx",
    "tests/**/*.ts",
    "index.ts",
    "tsd.d.ts"
  ]
}
