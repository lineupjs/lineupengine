{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "importHelpers": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "baseUrl": "../",
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "demo/**/*.ts",
    "demo/**/*.tsx",
    "tests/**/*.ts",
    "index.ts",
    "tsd.d.ts"
  ]
}
